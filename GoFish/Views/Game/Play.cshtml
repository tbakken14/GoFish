<!DOCTYPE html>
<html>

<head>
    <title>Go Fish!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <meta charset='utf-8'>
</head>

<body>
    <h1>Go Fish!</h1>
    <form action="/Game" method="post">
        <label for="isGoFish">Go Fish?</label>
        <input id="isGoFish" name="isGoFish" type="checkbox" value="True">
        <label for="card"></label>
        <input id="card" name="card" type="number">
        <label for="playerFrom"></label>
        <input id="playerFrom" name="playerFrom" type="number">
        <button type="submit">Add an item</button>
    </form>
    @foreach (int card in @Model.Cards)
    {
        <span>@card</span>
    }
</body>

</html>
